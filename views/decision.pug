extends layout
block content
  form(action='/decision', method='post')
    h2 Hi #{user.username}
    p
      b #{client.name} is requesting access to your account.
    p Do you approve?
    input(name='transaction_id', type='hidden', value= transactionID)
    p.actions
      input.no(type='submit',value='Deny', name='cancel', id='deny')
      input.yes(type='submit',value='Allow', id='allow')