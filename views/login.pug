extends layout
block content
  if clientId
    form(action='/oauth/authorization',method='post')
      input(id='clientId', type='hidden',value= clientId, name='clientId')
      input(id='redirectUri', type='hidden',value= redirectUri, name='redirectUri')
      input(id='responseType', type='hidden',value= responseType, name='responseType')
      p
        label(for='username') Username:
        input(id='username', type='text',value='', name='username',autofocus)
      p
        label(for='password') Password:
        input(id='password', type='password',value='', name='password')
      p.actions
        input.yes(type='submit',value='Log in to authorize')

  unless clientId
    form(action='/login',method='post')
      input(id='destination', type='hidden',value= destination, name='destination')
      p
        label(for='username') Username:
        input(id='username', type='text',value='', name='username',autofocus)
      p
        label(for='password') Password:
        input(id='password', type='password',value='', name='password')
      p.actions
        input.yes(type='submit',value='Log in')
